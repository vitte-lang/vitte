# ============================================================================
# Cipher convenience schema
# ============================================================================

# Algorithms used by manifests (decoded from strings by tooling).

enum MufCipherAlg
  Aes
  ChaCha20
.end

enum MufCipherFamily
  Block
  Stream
.end

enum MufCipherMode
  # Block cipher modes
  Ecb
  Cbc
  Ctr
  Xts

  # Stream cipher mode (for ChaCha20)
  XorStream
.end

enum MufCipherDirection
  Encrypt
  Decrypt
.end

enum MufCipherBackendPreference
  Auto
  Software
  Hardware
  Remote
.end

enum MufCipherIvPolicy
  # Caller supplies IV and manages uniqueness/entropy.
  CallerManaged

  # Provider generates IV (requires API to return IV).
  ProviderRandom

  # Provider maintains monotonic counter IV (CTR-like), requires stored state.
  MonotonicCounter
.end

enum MufCipherNoncePolicy
  # For stream ciphers / CTR: enforce per-key nonce uniqueness.
  CallerManaged
  StrictUnique
  MonotonicCounter
  ProviderRandom
.end

enum MufCipherKeyPolicy
  CallerKey
  ProviderGenerated
  ProviderKms
.end

struct MufCipherLimits
  key_max        : u32
  iv_max         : u32
  nonce_max      : u32

  msg_max        : u64

  # streaming constraints
  chunk_max      : u32
.end

struct MufCipherPolicy
  alg            : MufCipherAlg
  family         : MufCipherFamily
  mode           : MufCipherMode
  direction      : MufCipherDirection

  prefer         : MufCipherBackendPreference

  # Key/IV/nonce management
  key_policy     : MufCipherKeyPolicy
  iv_policy      : MufCipherIvPolicy
  nonce_policy   : MufCipherNoncePolicy

  # Mode-specific validation knobs
  strict_lengths : bool
  allow_ecb      : bool
  allow_streaming : bool

  # Padding (CBC/ECB): string surface decoded into enum by tooling.
  padding        : string

  # Hardening
  constant_time   : bool
  sidechannel_hard : bool
.end

struct MufCipherProviderOverride
  provider_id    : string
  priority       : i32
  required_flags : u32
.end

struct MufCipherModule
  name           : string
  path           : MufPath
  enabled        : bool

  alg            : MufCipherAlg
  family         : MufCipherFamily
  mode           : MufCipherMode

  feature        : string

  policy         : MufCipherPolicy
  limits         : MufCipherLimits
.end

struct MufCipherPreset
  name           : string
  description    : string

  policy         : MufCipherPolicy
  provider       : MufCipherProviderOverride

  modules        : coll.Vec[MufCipherModule]
.end

struct MufCipherManifest
  manifest        : MufManifest

  cipher_modules  : coll.Vec[MufCipherModule]
  presets         : coll.Vec[MufCipherPreset]
.end

