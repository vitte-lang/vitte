

# Vitte.toml — vitte_ast_ir
#
# Manifest du crate `vitte_ast_ir`.
#
# IR proche AST (HIR-like) servant de pivot entre `vitte_ast` (AST) et les IR
# plus bas niveau (MIR/bytecode). Contient des tables + IDs et des visitors.

[manifest]
format = "vitte"
version = 1

[package]
