  "target/**",
  ".git/**",
]

[target.lib]
path = "src/lib.vit"
module = "vitte_ast_ir"

# (Optionnel) module tree si ton build le consomme.
module_tree = "src/mod.vit"

[profile.dev]
opt_level = 0
debug = true

[profile.release]
opt_level = 2
