# -----------------------------------------------------------------------------
# std/encoding - test runner / bootstrap validation entrypoint
# -----------------------------------------------------------------------------
# Validates std.encoding primitives (hex/base64/utf8) during bootstrap and CI.
# -----------------------------------------------------------------------------

module std.encoding.main

use std.encoding

const EXIT_OK: I32 = 0
const EXIT_FAIL: I32 = 1

fn run_all() -> I32
  do test_hex_roundtrip()
  do test_base64_roundtrip()
  do test_utf8_validation()
  ret EXIT_OK
.end

program std.encoding.main
  let rc = run_all()
  ret rc
.end
