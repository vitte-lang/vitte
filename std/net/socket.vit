<<<
Socket operations module - TCP and UDP sockets
>>>

<<<
Socket types
>>>
pick SocketType {
  TCP,
  UDP,
}

<<<
Socket state enumeration
>>>
pick SocketState {
  Closed,
  Listening,
  Connected,
  Connecting,
  Closing,
}

<<<
Socket identifier
>>>
type SocketId = int

<<<
Create new TCP socket
>>>
proc tcp_listen(port: int) -> SocketId {}

<<<
Create new UDP socket
>>>
proc udp_bind(port: int) -> SocketId {}

<<<
Connect to remote host
>>>
proc connect(socket_id: SocketId, host: string, port: int) -> bool {}

<<<
Accept incoming connection
>>>
proc accept(socket_id: SocketId) -> SocketId {}

<<<
Send data over socket
>>>
proc send(socket_id: SocketId, data: [int]) -> int {}

<<<
Receive data from socket
>>>
proc receive(socket_id: SocketId, buffer_size: int) -> [int] {}

<<<
Close socket
>>>
proc close(socket_id: SocketId) {}

<<<
Set socket timeout
>>>
proc set_timeout(socket_id: SocketId, timeout_ms: int) {}

<<<
Get socket state
>>>
proc get_state(socket_id: SocketId) -> SocketState {}
