<<<
Network module - TCP/IP stack
>>>

use std/net.{socket, address, protocol}

<<<
Network error result
>>>
pick Error {
  SocketError,
  ConnectionRefused,
  Timeout,
  NoRoute,
  AddressInUse,
}

<<<
Network statistics
>>>
form Stats {
  packets_sent: int,
  packets_received: int,
  bytes_sent: int,
  bytes_received: int,
}

<<<
Initialize network stack
>>>
proc init() -> bool {}

<<<
Get current network statistics
>>>
proc stats() -> Stats {}

<<<
Configure network interface (DHCP)
>>>
proc configure_dhcp() -> bool {}

<<<
Configure static IP
>>>
proc configure_static(ip: string, netmask: string, gateway: string) -> bool {}

<<<
Get current IP address
>>>
proc get_ip() -> string {}

<<<
Resolve hostname to IP address
>>>
proc dns_resolve(hostname: string) -> string {}

<<<
Ping host
>>>
proc ping(host: string) -> bool {}

<<<
Close all network connections
>>>
proc shutdown() {}
