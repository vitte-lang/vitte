<<<
Time module - Timer and clock operations
>>>

<<<
Time structure with seconds and milliseconds
>>>
form Time {
  seconds: int,
  milliseconds: int,
}

<<<
Timer callback type
>>>
type TimerCallback = proc() -> int

<<<
Timer identifier
>>>
type TimerId = int

<<<
Get current system time
>>>
proc now() -> Time {}

<<<
Get milliseconds since boot
>>>
proc millis() -> int {}

<<<
Get microseconds since boot
>>>
proc micros() -> int {}

<<<
Sleep for milliseconds
>>>
proc sleep_ms(ms: int) {}

<<<
Sleep for seconds
>>>
proc sleep_s(seconds: int) {}

<<<
Create one-shot timer
>>>
proc timer_once(delay_ms: int, callback: TimerCallback) -> TimerId {}

<<<
Create repeating timer
>>>
proc timer_repeat(interval_ms: int, callback: TimerCallback) -> TimerId {}

<<<
Cancel timer
>>>
proc timer_cancel(timer_id: TimerId) {}

<<<
Get elapsed time
>>>
proc elapsed(start: Time) -> Time {}

<<<
Get tick frequency
>>>
proc frequency() -> int {}
