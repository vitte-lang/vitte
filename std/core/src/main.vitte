# -----------------------------------------------------------------------------
# std/core - test runner / bootstrap validation entrypoint
# -----------------------------------------------------------------------------
# This executable validates std.core primitives during bootstrap and CI.
# -----------------------------------------------------------------------------

module std.core.main

use std.core

const EXIT_OK: I32 = 0
const EXIT_FAIL: I32 = 1

fn run_all() -> I32
  do test_option_result_core()
  do test_bytes_ops()
  do test_math_helpers()
  ret EXIT_OK
.end

program std.core.main
  let rc = run_all()
  ret rc
.end
