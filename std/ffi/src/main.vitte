

# -----------------------------------------------------------------------------
# std/ffi - test runner / bootstrap validation entrypoint
# -----------------------------------------------------------------------------
# Validates std.ffi primitives (ByteSpan/CStr helpers) during bootstrap and CI.
# -----------------------------------------------------------------------------

module std.ffi.main

use std.ffi

const EXIT_OK: I32 = 0
const EXIT_FAIL: I32 = 1

fn run_all() -> I32
  do test_bytespan_copy()
  do test_cstr_len_eq()
  ret EXIT_OK
.end

program std.ffi.main
  let rc = run_all()
  ret rc
.end