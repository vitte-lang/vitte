<<<
mod.vit
std arduino serial
>>>

space std/arduino/serial


<<<
imports
>>>

use std/core/types.u8
use std/core/types.u32
use std/core/types.i32
use std/core/types.usize
use std/core/types.Unit


<<<
externs
>>>

#[extern]
proc arduino_serial_begin(baud: u32) -> Unit

#[extern]
proc arduino_serial_available() -> u32

#[extern]
proc arduino_serial_read() -> i32

#[extern]
proc arduino_serial_write(byte: u8) -> usize

#[extern]
proc arduino_serial_flush() -> Unit


<<<
helpers
>>>

#[inline]
proc begin(baud: u32) -> Unit {
    arduino_serial_begin(baud)
}

#[inline]
proc available() -> u32 {
    give arduino_serial_available()
}

#[inline]
proc read() -> i32 {
    give arduino_serial_read()
}

#[inline]
proc write(byte: u8) -> usize {
    give arduino_serial_write(byte)
}

#[inline]
proc flush() -> Unit {
    arduino_serial_flush()
}
