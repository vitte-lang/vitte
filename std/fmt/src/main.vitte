# -----------------------------------------------------------------------------
# std/fmt - test runner / bootstrap validation entrypoint
# -----------------------------------------------------------------------------
# Validates std.fmt primitives (integer formatting, JSON escaping) during
# bootstrap and CI.
# -----------------------------------------------------------------------------

module std.fmt.main

use std.fmt

const EXIT_OK: I32 = 0
const EXIT_FAIL: I32 = 1

fn run_all() -> I32
  do test_fmt_int()
  do test_fmt_escape_json()
  ret EXIT_OK
.end

program std.fmt.main
  let rc = run_all()
  ret rc
.end
