# -----------------------------------------------------------------------------
# std/compression - test runner / example entrypoint
# -----------------------------------------------------------------------------
# This executable validates std.compression primitives (RLE/LZ77/Huffman/VCZ1)
# during bootstrap and CI.
# -----------------------------------------------------------------------------

module std.compression.main

use std.compression
use std.collections

const EXIT_OK: I32 = 0
const EXIT_FAIL: I32 = 1

fn run_all() -> I32
  do test_rle_roundtrip()
  do test_lz77_roundtrip()
  do test_huff_roundtrip()
  do test_vcz_container()
  ret EXIT_OK
.end

program std.compression.main
  let rc = run_all()
  ret rc
.end
