# ============================================================================
# Métadonnées de prélude et vue agrégée
# ============================================================================

# Modules couverts par ce prélude.
enum StdPreludeModule
    variant PreludeCore
    variant PreludeCollections
    variant PreludeIo
    variant PreludeDebug
    variant PreludeMath
.end

# Capacité logique exposée par le prélude.
enum StdPreludeCapability
    variant PreludeCapCoreTypes
    variant PreludeCapCollections
    variant PreludeCapIo
    variant PreludeCapDebug
    variant PreludeCapMath
.end

# Profil logique du prélude : choix d exposé.
enum StdPreludeProfileKind
    variant PreludeProfileDefault
    variant PreludeProfileMinimal
    variant PreludeProfileFull
    variant PreludeProfileTooling
.end

# Version du prélude, en style semver logique.
struct StdPreludeVersion
    field major: u32
    field minor: u32
    field patch: u32

    # Suffixe pré-release, sous forme de longueur de texte.
    field pre_release_len: Len
.end

# Snapshot agrégé pour les outils et inspecteurs.
struct StdPreludeSnapshot
    # Nom logique du profil de prélude, sous forme de longueur.
    field profile_name_len: Len

    # Version déclarative de ce prélude.
    field version: StdPreludeVersion

    # Profil logique utilisé.
    field profile_kind: StdPreludeProfileKind

    # Modules couverts.
    field modules: List<StdPreludeModule>

    # Capacités exposées.
    field capabilities: List<StdPreludeCapability>

    # Snapshots principaux agrégés.
    field core_frame: CoreFrameSnapshot
    field io_runtime: IoRuntimeSnapshot
    field debug_session: DebugSessionSnapshot
    field math_session: MathSessionSnapshot
.end

.end