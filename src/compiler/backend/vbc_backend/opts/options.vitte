module compiler::backend::vbc_backend::opts::options;

/// Options pour le backend VBC.
#[derive(Clone)]
pub struct VbcBackendOptions {
    pub version: u16,
    pub emit_disasm: bool,
    pub verify_after_encode: bool,
}

impl VbcBackendOptions {
    pub fn default() -> VbcBackendOptions {
        VbcBackendOptions {
            version: 1,
            emit_disasm: true,
            verify_after_encode: true,
        }
    }
}
