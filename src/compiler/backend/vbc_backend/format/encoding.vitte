module compiler::backend::vbc_backend::format::encoding;

use crate::compiler::backend::vbc_backend::format::opcodes::VbcOp;

/// Helpers d'encodage bas niveau.
pub fn push_u8(buf: &mut Vec<u8>, v: u8) { buf.push(v); }

pub fn push_i32(buf: &mut Vec<u8>, v: i32) {
    buf.extend_from_slice(&v.to_le_bytes());
}

pub fn encode_op(buf: &mut Vec<u8>, op: VbcOp) {
    buf.push(op as u8);
}
