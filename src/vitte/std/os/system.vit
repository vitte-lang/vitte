<<<
system.vit
std os system helpers
>>>

space std/os/system


<<<
imports
>>>

use std/core/types.string
use std/core/types.bool
use std/core/option.Option
use std/core/result.Result


<<<
externs
>>>

#[extern]
proc os_platform() -> string

#[extern]
proc os_arch() -> string

#[extern]
proc os_home_dir() -> Option[string]

#[extern]
proc os_temp_dir() -> string

#[extern]
proc os_current_dir() -> Result[string, string]

#[extern]
proc os_set_current_dir(path: string) -> bool

#[extern]
proc os_exe_path() -> Result[string, string]

#[extern]
proc os_path_sep() -> string


<<<
helpers
>>>

#[inline]
proc platform() -> string {
    give os_platform()
}

#[inline]
proc arch() -> string {
    give os_arch()
}

#[inline]
proc home_dir() -> Option[string] {
    give os_home_dir()
}

#[inline]
proc temp_dir() -> string {
    give os_temp_dir()
}

#[inline]
proc current_dir() -> Result[string, string] {
    give os_current_dir()
}

#[inline]
proc set_current_dir(path: string) -> bool {
    give os_set_current_dir(path)
}

#[inline]
proc exe_path() -> Result[string, string] {
    give os_exe_path()
}

#[inline]
proc path_sep() -> string {
    give os_path_sep()
}
