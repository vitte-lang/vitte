<<<
addr.vit
std net addressing
>>>

space std/net/addr


<<<
imports
>>>

use std/core/types.u8
use std/core/types.u16


<<<
addressing
>>>

form IpV4 {
    a: u8
    b: u8
    c: u8
    d: u8
}

form IpV6 {
    a: u16
    b: u16
    c: u16
    d: u16
    e: u16
    f: u16
    g: u16
    h: u16
}

pick IpAddr {
    V4(value: IpV4)
    V6(value: IpV6)
}

form SocketAddr {
    ip: IpAddr
    port: u16
}
