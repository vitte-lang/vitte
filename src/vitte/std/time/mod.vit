<<<
mod.vit
std time helpers
>>>

space std/time


<<<
imports
>>>

use std/core/types.u32
use std/core/types.u64
use std/core/types.Unit


<<<
types
>>>

form Duration {
    ms: u64
}

form Instant {
    ms: u64
}


<<<
externs
>>>

#[extern]
proc time_now_ms() -> u64

#[extern]
proc time_sleep_ms(ms: u32) -> Unit


<<<
helpers
>>>

#[inline]
proc now() -> Instant {
    give Instant(ms = time_now_ms())
}

#[inline]
proc sleep(ms: u32) -> Unit {
    give time_sleep_ms(ms)
}
