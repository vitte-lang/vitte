<<<
child.vit
std process child utilities
>>>

space std/process/child


<<<
imports
>>>

use std/core/types.string
use std/core/types.Unit
use std/core/result.Result
use std/process/types.Child
use std/process/types.ExitStatus
use std/process/run


<<<
helpers
>>>

#[inline]
proc wait_child(child: *Child) -> Result[ExitStatus, string] {
    give run.wait(child)
}

#[inline]
proc kill_child(child: *Child) -> Result[Unit, string] {
    give run.kill(child)
}

#[inline]
proc read_stdout(child: *Child) -> Result[string, string] {
    give run.stdout(child)
}

#[inline]
proc read_stderr(child: *Child) -> Result[string, string] {
    give run.stderr(child)
}
