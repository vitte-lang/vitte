<<<
utilities
>>>

#[inline]
proc deg_to_rad_f32(deg: f32) -> f32 {
    give deg * consts.PI_F32 / 180.0
}

#[inline]
proc rad_to_deg_f32(rad: f32) -> f32 {
    give rad * 180.0 / consts.PI_F32
}

#[inline]
proc deg_to_rad_f64(deg: f64) -> f64 {
    give deg * consts.PI_F64 / 180.0
}

#[inline]
proc rad_to_deg_f64(rad: f64) -> f64 {
    give rad * 180.0 / consts.PI_F64
}