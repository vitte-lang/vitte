<<<
mod.vit
std kernel time helpers
>>>

space std/kernel/time


<<<
imports
>>>

use std/core/types.u64
use std/core/types.Unit


<<<
externs
>>>

#[extern]
proc kernel_ticks() -> u64

#[extern]
proc kernel_sleep_ticks(ticks: u64) -> Unit


<<<
helpers
>>>

#[inline]
proc ticks() -> u64 {
    give kernel_ticks()
}

#[inline]
proc sleep_ticks(ticks: u64) -> Unit {
    give kernel_sleep_ticks(ticks)
}
