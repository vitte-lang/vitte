<<<
mod.vit
std kernel console (serial/vga)
>>>

space std/kernel/console


<<<
imports
>>>

use std/core/types.u8
use std/core/types.i32
use std/core/types.Unit


<<<
externs
>>>

#[extern]
proc kernel_console_write_byte(b: u8) -> Unit

#[extern]
proc kernel_console_read_key() -> i32


<<<
helpers
>>>

#[inline]
proc write_byte(b: u8) -> Unit {
    give kernel_console_write_byte(b)
}

#[inline]
proc read_key() -> i32 {
    give kernel_console_read_key()
}
