space std/kernel/syscall

use std/core/types.i32
use std/core/types.u8
use std/core/types.usize
use std/core/types.string

#[extern]
proc open_read(path: string) -> i32

#[extern]
proc open_write(path: string) -> i32

#[extern]
proc read(fd: i32, buf: *[u8]) -> i32

#[extern]
proc write(fd: i32, buf: *[u8]) -> i32

#[extern]
proc close(fd: i32) -> Unit

#[extern]
proc execv(path: string, argv: [string]) -> Unit

#[extern]
proc spawn(path: string, argv: [string]) -> i32

#[extern]
proc wait_pid(pid: i32) -> i32
