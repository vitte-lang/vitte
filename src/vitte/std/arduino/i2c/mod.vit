<<<
helpers
>>>

#[inline]
proc begin() -> Unit {
    arduino_i2c_begin()
}

#[inline]
proc begin_transmission(addr: u8) -> Unit {
    arduino_i2c_begin_transmission(addr)
}

#[inline]
proc write(byte: u8) -> usize {
    give arduino_i2c_write(byte)
}

#[inline]
proc end_transmission() -> u8 {
    give arduino_i2c_end_transmission()
}

#[inline]
proc request_from(addr: u8, len: u8) -> u8 {
    give arduino_i2c_request_from(addr, len)
}

#[inline]
proc read() -> i32 {
    give arduino_i2c_read()
}


