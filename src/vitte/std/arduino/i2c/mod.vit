#[extern]
proc arduino_i2c_begin() -> Unit

#[extern]
proc arduino_i2c_begin_transmission(addr: u8) -> Unit

#[extern]
proc arduino_i2c_write(byte: u8) -> usize

#[extern]
proc arduino_i2c_end_transmission() -> u8

#[extern]
proc arduino_i2c_request_from(addr: u8, len: u8) -> u8

