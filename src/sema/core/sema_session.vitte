module sema.core.sema_session;

/// Immutable configuration for a semantic analysis session.
pub struct SemaSession {
    pub profile: SemaProfile,
}

/// Simple profile enum: you can extend it later.
pub enum SemaProfile {
    Fast,
    Full,
    Ide,
    Ci,
}

impl SemaSession {
    pub fn new(profile: SemaProfile) -> SemaSession {
        SemaSession { profile }
    }
}
