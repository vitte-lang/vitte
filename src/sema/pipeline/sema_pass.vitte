module sema.pipeline.sema_pass;

use sema.core.sema_result::SemaResult;
use sema.core.sema_context::SemaContext;
use sema.integration.sema_providers::SemaProviders;

/// Trait implemented by each semantic pass.
pub trait SemaPass<P: SemaProviders> {
    fn id(&self) -> u32;
    fn name(&self) -> &str;
    fn run(&self, ctx: &mut SemaContext<P>) -> SemaResult<()>;
}
