module sema.diagnostics.sema_diag_builder;

use sema.diagnostics.sema_diag_codes::SemaDiagCode;

/// Very small diagnostic representation for now.
pub struct SemaDiag {
    pub code: SemaDiagCode,
    pub message: String,
}

pub struct SemaDiagBuilder;

impl SemaDiagBuilder {
    pub fn error(code: SemaDiagCode, message: String) -> SemaDiag {
        SemaDiag { code, message }
    }
}
