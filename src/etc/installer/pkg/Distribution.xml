<?xml version="1.0" encoding="utf-8" standalone="no"?>
<installer-gui-script minSpecVersion="2">
    <title>The  Compiler</title>
    <license file="LICENSE.txt" mime-type="text/plain"/>
    <pkg-ref id="org.-lang."/>
    <options customize="always" require-scripts="false" hostArchitectures="i386,x86_64"/>
    <domains enable_anywhere="false" enable_currentUserHome="false" enable_localSystem="true" />
    <volume-check>
        <allowed-os-versions>
            <os-version min="10.12"/>
        </allowed-os-versions>
    </volume-check>
    <choices-outline>
      <line choice="install">
      <line choice="c"/>
      <line choice="-std"/>
      <line choice="cargo"/>
      <!-- tool--docs-start -->
      <line choice="-docs"/>
      <!-- tool--docs-end -->
      </line>
      <line choice="uninstall" />
    </choices-outline>
    <!--
    These 'selected' scripts ensure that install and uninstall can never be selected at
    the same time. Exactly how they work is pretty mysterious, tied to the unspecified algorithm
    the installer uses to traverse the options after one is toggled.
      -->
    <choice id="install" visible="true"
        title="Install " description="Install the  compiler, package manager and documentation."
        customLocation="/usr/local"
        selected="!choices.uninstall.selected"
        />
    <choice id="uninstall" visible="true"
        title="Uninstall " description="Select this option to uninstall an existing  installation."
        customLocation="/usr/local"
        selected="!(choices.install.selected || choices.c.selected || choices.cargo.selected || choices['-docs'].selected)"
        start_selected="false"
        >
        <pkg-ref id="org.-lang.uninstall"/>
    </choice>
    <choice id="c" visible="true"
        title="Compiler" description="c, the  compiler, and doc, the API documentation tool."
        selected="(!choices.uninstall.selected &amp;&amp; choices.c.selected) || (choices.uninstall.selected &amp;&amp; choices.install.selected)"
        >
        <pkg-ref id="org.-lang.c"/>
    </choice>
    <choice id="cargo" visible="true"
        title="Cargo" description="cargo, the  package manager."
        selected="(!choices.uninstall.selected &amp;&amp; choices.cargo.selected) || (choices.uninstall.selected &amp;&amp; choices.install.selected)"
        >
        <pkg-ref id="org.-lang.cargo"/>
    </choice>
    <choice id="-std" visible="true"
        title="Standard Library" description="The  standard library."
        selected="(!choices.uninstall.selected &amp;&amp; choices['-std'].selected) || (choices.uninstall.selected &amp;&amp; choices.install.selected)"
        >
        <pkg-ref id="org.-lang.-std"/>
    </choice>
    <!-- tool--docs-start -->
    <choice id="-docs" visible="true"
        title="Documentation" description="HTML documentation."
        selected="(!choices.uninstall.selected &amp;&amp; choices['-docs'].selected) || (choices.uninstall.selected &amp;&amp; choices.install.selected)"
        >
        <pkg-ref id="org.-lang.-docs"/>
    </choice>
    <!-- tool--docs-end -->
    <pkg-ref id="org.-lang.c" version="0" onConclusion="none">c.pkg</pkg-ref>
    <pkg-ref id="org.-lang.cargo" version="0" onConclusion="none">cargo.pkg</pkg-ref>
    <!-- tool--docs-start -->
    <pkg-ref id="org.-lang.-docs" version="0" onConclusion="none">-docs.pkg</pkg-ref>
    <!-- tool--docs-end -->
    <pkg-ref id="org.-lang.-std" version="0" onConclusion="none">-std.pkg</pkg-ref>
    <pkg-ref id="org.-lang.uninstall" version="0" onConclusion="none">uninstall.pkg</pkg-ref>
    <background file="-logo.png" mime-type="image/png"
                alignment="bottomleft"/>
</installer-gui-script>
