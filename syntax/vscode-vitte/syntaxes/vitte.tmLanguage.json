{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vitte",
  "scopeName": "source.vitte",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#dotEnd" },
    { "include": "#keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.vitte", "match": "//.*$" },
        {
          "name": "comment.block.vitte",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vitte",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.vitte", "match": "\\\\(x[0-9A-Fa-f]{2}|[\"'\\\\nrt0])" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.float.vitte", "match": "\\b[0-9](?:[0-9_]*)(?:\\.[0-9](?:[0-9_]*)?)(?:[eE][+-]?[0-9](?:[0-9_]*)?)?\\b" },
        { "name": "constant.numeric.integer.hex.vitte", "match": "\\b0x[0-9A-Fa-f](?:[0-9A-Fa-f_])*\\b" },
        { "name": "constant.numeric.integer.bin.vitte", "match": "\\b0b[01](?:[01_])*\\b" },
        { "name": "constant.numeric.integer.dec.vitte", "match": "\\b[0-9](?:[0-9_])*\\b" }
      ]
    },
    "dotEnd": {
      "patterns": [
        { "name": "keyword.control.vitte", "match": "\\.end\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vitte",
          "match": "\\b(mod|use|export|from|all|type|struct|union|enum|fn|scn|prog|program|service|kernel|driver|tool|scenario|pipeline|let|const|if|elif|else|while|for|in|loop|match|break|continue|ret|return|set|say|do|when)\\b"
        },
        {
          "name": "constant.language.vitte",
          "match": "\\b(true|false|null|nil)\\b"
        },
        {
          "name": "keyword.operator.word.vitte",
          "match": "\\b(and|or|not|as)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.vitte", "match": "==|!=|<=|>=|<<=|>>=|<<|>>|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|->|=>|&&|\\|\\|" },
        { "name": "keyword.operator.vitte", "match": "[=+\\-*/%&|^~!<>?:]" }
      ]
    }
  }
}

