// Error types and logging severity levels

pub enum ErrorLevel {
    Debug,
    Info,
    Warning,
    Error,
    Critical,
}

pub struct ErrorReport {
    level: ErrorLevel,
    code: u32,
    message: string,
    context: string,
}

pub struct Logger {
    enabled: bool,
    level_threshold: ErrorLevel,
}

pub trait LoggingBackend {
    fn log(&self, report: ErrorReport);
    fn flush();
}
