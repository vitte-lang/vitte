{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vitte",
  "scopeName": "source.vitte",
  "fileTypes": ["vitte"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#fn-def" },
    { "include": "#entry-def" },
    { "include": "#type-def" },
    { "include": "#keywords" },
    { "include": "#phrase-keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#type-path" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.vitte",
      "match": "#.*$"
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vitte",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "name": "constant.character.escape.vitte", "match": "\\\\[\"\\\\]" },
            { "name": "invalid.illegal.newline.vitte", "match": "\\n" }
          ]
        },
        {
          "name": "string.quoted.single.vitte",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.vitte", "match": "\\\\['\\\\]" },
            { "name": "invalid.illegal.newline.vitte", "match": "\\n" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.vitte",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.vitte",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "fn-def": {
      "begin": "\\b(fn|scenario)\\b\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "beginCaptures": {
        "1": { "name": "storage.type.function.vitte" },
        "2": { "name": "entity.name.function.vitte" }
      },
      "end": "(?=\\s|\\(|$)"
    },
    "entry-def": {
      "begin": "\\b(program|service|pipeline|driver|tool|scn|prog)\\b\\s+([A-Za-z_][A-Za-z0-9_.]*)",
      "beginCaptures": {
        "1": { "name": "storage.type.function.vitte" },
        "2": { "name": "entity.name.function.vitte" }
      },
      "end": "(?=\\s|\\(|$)"
    },
    "type-def": {
      "begin": "\\b(struct|union|enum|type)\\b\\s+([A-Za-z_][A-Za-z0-9_]*)",
      "beginCaptures": {
        "1": { "name": "storage.type.vitte" },
        "2": { "name": "entity.name.type.vitte" }
      },
      "end": "(?=\\s|\\{|\\.end|$)"
    },
    "keywords": {
      "name": "keyword.control.vitte",
      "match": "\\b(module|import|export|program|service|kernel|driver|tool|scenario|pipeline|fn|let|const|mut|if|elif|else|while|for|in|match|break|continue|return|as|all|type|union|enum)\\b"
    },
    "phrase-keywords": {
      "name": "keyword.control.phrase.vitte",
      "match": "\\b(mod|use|field|scn|prog|set|say|do|ret|when|loop|from|to|step)\\b"
    },
    "constants": {
      "patterns": [
        { "name": "constant.language.boolean.vitte", "match": "\\b(true|false)\\b" },
        { "name": "constant.language.operator.vitte", "match": "\\b(and|or|not)\\b" }
      ]
    },
    "operators": {
      "name": "keyword.operator.vitte",
      "match": "(==|!=|<=|>=|=>|&&|\\|\\||!|\\+|-|\\*|/|%|=|\\+=|-=|\\*=|/=|<|>|::|\\.|,|->)"
    },
    "type-path": {
      "name": "entity.name.type.vitte",
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(::|\\.)\\s*([A-Za-z_][A-Za-z0-9_]*)"
    }
  }
}
