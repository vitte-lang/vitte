{
  "files.associations": {
    "*.vit": "vitte"
  },
  "files.watcherExclude": {
    "**/build/**": true,
    "**/target/**": true,
    "**/.vitte-cache/**": true,
    "**/pkgout/**": true
  },
  "search.exclude": {
    "**/build/**": true,
    "**/target/**": true,
    "**/.vitte-cache/**": true,
    "**/pkgout/**": true
  },
  "files.exclude": {
    "**/build/**": true,
    "**/target/**": true,
    "**/.vitte-cache/**": true,
    "**/pkgout/**": true
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.formatOnSave": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": false,
  "editor.inlineSuggest.mode": "subword",
  "editor.suggestOnTriggerCharacters": true,
  "editor.suggestSelection": "first",
  "editor.suggest.localityBonus": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.insertMode": "insert",
  "editor.suggest.preview": true,
  "editor.suggest.previewMode": "subwordSmart",
  "editor.suggest.maxVisibleSuggestions": 30,
  "editor.suggest.showWords": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.snippetSuggestions": "inline",
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.parameterHints.enabled": true,
  "editor.parameterHints.cycle": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "smart",
  "github.copilot.enable": {
    "*": true,
    "vitte": false,
    "vit": false
  },
  "vitte.features.completion": true,
  "vitte.features.hover": true,
  "vitte.features.definition": true,
  "vitte.features.references": true,
  "vitte.features.documentSymbols": true,
  "vitte.features.workspaceSymbols": true,
  "vitte.features.semanticTokens": true,
  "vitte.requestMaxConcurrent": 8,
  "vitte.requestTimeoutMs": 1200,
  "vitte.requestTimeouts.completion": 1400,
  "vitte.requestTimeouts.hover": 900,
  "vitte.requestTimeouts.definition": 1200,
  "vitte.requestTimeouts.references": 1500,
  "vitte.requestTimeouts.documentSymbols": 1200,
  "vitte.requestTimeouts.workspaceSymbols": 1500,
  "[vitte]": {
    "github.copilot.enable": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.quickSuggestionsDelay": 0,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.suggest.localityBonus": true,
    "editor.suggest.preview": true,
    "editor.suggest.previewMode": "subwordSmart",
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showConstructors": true,
    "editor.suggest.showFields": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showClasses": true,
    "editor.suggest.showStructs": true,
    "editor.suggest.showInterfaces": true,
    "editor.suggest.showModules": true,
    "editor.suggest.showProperties": true,
    "editor.suggest.showValues": true,
    "editor.suggest.showConstants": true,
    "editor.suggest.showEnums": true,
    "editor.suggest.showEnumMembers": true,
    "editor.suggest.showKeywords": true,
    "editor.suggest.showFiles": true,
    "editor.suggest.showSnippets": true,
    "editor.suggest.showWords": false,
    "editor.suggest.insertMode": "insert",
    "editor.parameterHints.enabled": true,
    "editor.parameterHints.cycle": true,
    "editor.snippetSuggestions": "top",
    "editor.wordBasedSuggestions": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.suppressSuggestions": false,
    "editor.inlineSuggest.mode": "subword",
    "editor.inlayHints.enabled": "on",
    "editor.tabCompletion": "on",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.acceptSuggestionOnCommitCharacter": true
  },
  "[vit]": {
    "github.copilot.enable": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.quickSuggestionsDelay": 0,
    "editor.suggestOnTriggerCharacters": true,
    "editor.suggestSelection": "first",
    "editor.suggest.localityBonus": true,
    "editor.suggest.preview": true,
    "editor.suggest.previewMode": "subwordSmart",
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showConstructors": true,
    "editor.suggest.showFields": true,
    "editor.suggest.showVariables": true,
    "editor.suggest.showClasses": true,
    "editor.suggest.showStructs": true,
    "editor.suggest.showInterfaces": true,
    "editor.suggest.showModules": true,
    "editor.suggest.showProperties": true,
    "editor.suggest.showValues": true,
    "editor.suggest.showConstants": true,
    "editor.suggest.showEnums": true,
    "editor.suggest.showEnumMembers": true,
    "editor.suggest.showKeywords": true,
    "editor.suggest.showFiles": true,
    "editor.suggest.showSnippets": true,
    "editor.suggest.showWords": false,
    "editor.suggest.insertMode": "insert",
    "editor.parameterHints.enabled": true,
    "editor.parameterHints.cycle": true,
    "editor.snippetSuggestions": "top",
    "editor.wordBasedSuggestions": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.suppressSuggestions": false,
    "editor.inlineSuggest.mode": "subword",
    "editor.inlayHints.enabled": "on",
    "editor.tabCompletion": "on",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.acceptSuggestionOnCommitCharacter": true
  },
  "vitte.commandShortcuts": [
    {
      "label": "Modules",
      "command": "vitte.modules.refresh",
      "icon": "$(symbol-module)",
      "tooltip": "Refresh Vitte modules view",
      "statusBar": true,
      "startup": false
    },
    {
      "label": "Diag",
      "command": "vitte.quickActions",
      "icon": "$(pulse)",
      "tooltip": "Open Vitte Quick Actions (diagnostics pipelines)",
      "statusBar": true,
      "startup": false
    }
  ],
  "vitte.quickActions.sequences": [
    {
      "id": "modules_refresh_diag",
      "label": "Modules: refresh + diagnostics",
      "description": "Refresh module structure and diagnostics",
      "steps": [
        {
          "command": "vitte.modules.refresh"
        },
        {
          "command": "vitte.diagnostics.refresh"
        }
      ]
    },
    {
      "id": "modules_ci_fast",
      "label": "Modules: run ci-mod-fast",
      "description": "Run module-focused CI checks in this repository",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: ci mod fast"
          ]
        }
      ]
    },
    {
      "id": "packages_strict_doctor_graph",
      "label": "Packages: strict + doctor + graph",
      "description": "Chain strict modules, module doctor, and module graph on current file",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: strict modules (current file)"
          ]
        },
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: module doctor (current file)"
          ]
        },
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: module graph (current file)"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_deep_current",
      "label": "Routine: current file ultra fiable",
      "description": "Strict imports -> fail-on-warning -> doctor -> graph -> refresh diagnostics",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: routine current file (ultra fiable)"
          ]
        },
        {
          "command": "vitte.diagnostics.refresh"
        }
      ]
    },
    {
      "id": "diagnostics_json_explain",
      "label": "Diagnostics: json + explain approfondi",
      "description": "Generate full JSON + code-only diagnostics, then run vitte explain",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics json pretty (current file)"
          ]
        },
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics code only (current file)"
          ]
        },
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics explain (pick code)"
          ]
        }
      ]
    },
    {
      "id": "packages_matrix_full",
      "label": "Packages: smoke + runtime + matrix",
      "description": "Run all package smoke checks",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: verification packages complete"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_floue_code_explain",
      "label": "Diagnostics: erreur floue (code + explain)",
      "description": "Run compact code diagnostics then explain selected diagnostic code",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: erreur floue (code + explain)"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_triage_ladder",
      "label": "Diagnostics: triage ladder parse->resolve->ir",
      "description": "Localize failure stage quickly",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics triage ladder (parse->resolve->ir)"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_runtime_matrix",
      "label": "Diagnostics: runtime profile matrix",
      "description": "Check compatibility on core/system/desktop/arduino profiles",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics runtime profile matrix (current file)"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_bundle_export",
      "label": "Diagnostics: export bundle files",
      "description": "Write code-only/json/module-index/stdlib-map reports to .vitte-cache/diagnostics",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics bundle export (current file)"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_max_allin",
      "label": "Diagnostics: MAX all-in",
      "description": "Run routine + stage ladder + runtime matrix + deterministic cache + report export",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: diagnostics max all-in (current file)"
          ]
        }
      ]
    },
    {
      "id": "json_module_loop",
      "label": "JSON module loop",
      "description": "Strict imports -> fail-on-warning -> module doctor -> module graph on src/vitte/packages/std/mod.vit",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: std/json module loop"
          ]
        }
      ]
    },
    {
      "id": "diagnostics_max_launch",
      "label": "MAX + launch current file",
      "description": "Run MAX diagnostics then launch current file with debug config",
      "steps": [
        {
          "command": "debug.startFromConfig",
          "args": [
            {
              "name": "Vitte: Launch current .vit (MAX diagnostics)"
            }
          ]
        }
      ]
    },
    {
      "id": "precommit_local",
      "label": "Pre-commit local",
      "description": "Routine current file + packages runtime smoke",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: pre-commit local"
          ]
        }
      ]
    },
    {
      "id": "module_boundary_audit",
      "label": "Module boundary audit",
      "description": "Dump module index and export report under .vitte-cache/diagnostics",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: module boundary audit (current file)"
          ]
        }
      ]
    },
    {
      "id": "fix_import_loop",
      "label": "Fix import loop",
      "description": "module doctor -> strict imports -> module graph json",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: fix import loop"
          ]
        }
      ]
    },
    {
      "id": "json_full_loop",
      "label": "JSON full loop",
      "description": "std/json full checks then module boundary audit export",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: std/json full"
          ]
        },
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: module boundary audit (current file)"
          ]
        }
      ]
    },
    {
      "id": "packages_current_full",
      "label": "Packages current full",
      "description": "strict imports -> module doctor -> module graph json -> module boundary audit on current file",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: packages current full"
          ]
        }
      ]
    },
    {
      "id": "packages_current_loop",
      "label": "Packages current loop",
      "description": "Run strict + doctor + graph json + boundary audit on current file",
      "steps": [
        {
          "command": "workbench.action.tasks.runTask",
          "args": [
            "vitte: package current loop"
          ]
        }
      ]
    }
  ]
}
