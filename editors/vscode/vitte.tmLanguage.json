{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vitte",
  "scopeName": "source.vitte",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#attributes" },
    { "include": "#usepath" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.double-slash.vitte", "match": "//.*$" },
        { "name": "comment.block.vitte", "begin": "/\\*", "end": "\\*/" },
        { "name": "comment.block.zone.vitte", "begin": "<<<", "end": ">>>" }
      ]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.double.vitte", "begin": "\"", "end": "\"", "patterns": [ { "name": "constant.character.escape.vitte", "match": "\\\\." } ] }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.vitte", "match": "\\b(0x[0-9A-Fa-f]+|0b[01]+|[0-9]+)\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        { "name": "keyword.control.vitte", "match": "\\b(space|pull|use|share|const|let|make|type|form|trait|pick|case|proc|entry|at|macro|give|emit|asm|unsafe|if|else|otherwise|loop|for|in|break|continue|select|when|match|return|not|and|or|is|as)\\b" },
        { "name": "constant.language.vitte", "match": "\\b(true|false|null)\\b" }
      ]
    },
    "types": {
      "patterns": [
        { "name": "storage.type.vitte", "match": "\\b(bool|string|int|char|i8|i16|i32|i64|isize|u8|u16|u32|u64|usize|f32|f64)\\b" }
      ]
    },
    "attributes": {
      "patterns": [
        { "name": "meta.annotation.vitte", "match": "#\\[[^\\]]+\\]" }
      ]
    },
    "usepath": {
      "patterns": [
        { "name": "constant.other.vitte", "match": "\\buse\\s+([A-Za-z0-9_./]+)" }
      ]
    }
  }
}
