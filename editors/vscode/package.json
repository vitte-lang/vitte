    "walkthroughs": [
      {
        "id": "vitte.quickstart",
        "title": "Vitte Quickstart",
        "description": "Learn how to open the docs, detect the toolchain, and run your first build.",
        "steps": [
          {
            "id": "vitte.quickstart.docs",
            "title": "Explore the docs & playground",
            "description": "Run [Vitte: Quick Actions](command:vitte.quickActions) and pick **Docs + Playground** to open the online docs on vitte.netlify.app.",
            "media": {
              "image": "media/icons/vitte-logo.svg",
              "altText": "Vitte"
            }
          },
          {
            "id": "vitte.quickstart.toolchain",
            "title": "Detect the Vitte toolchain",
            "description": "Use [Vitte: Detect Toolchain](command:vitte.detectToolchain) to auto-discover the CLI binaries or configure them manually.",
            "media": {
              "image": "media/icons/vitte-logo.svg",
              "altText": "Vitte"
            }
          },
          {
            "id": "vitte.quickstart.setup",
            "title": "Run the onboarding setup",
            "description": "Trigger [Vitte: Quick Actions](command:vitte.quickActions) again and choose **Run full setup** to chain docs, toolchain detection, and a build in one go.",
            "media": {
              "image": "media/icons/vitte-logo.svg",
              "altText": "Vitte"
            }
          }
        ]
      }
    ],
    "keybindings": [
      {
        "command": "vitte.restartServer",
        "key": "ctrl+shift+r",
        "when": "editorLangId == vitte"
      },
      {
        "command": "vitte.restartServer",
        "key": "ctrl+shift+r",
        "when": "editorLangId == vit"
      }
    ],
    "taskDefinitions": [
      {
        "type": "vitte",
        "required": [
          "command"
        ],
        "properties": {
          "command": {
            "type": "string",
            "enum": [
              "build",
              "run",
              "test",
              "clean",
              "bench"
            ]
          }
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Vitte Language",
      "properties": {
        "vitte.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Enable tracing for the Vitte language server."
        },
        "vitte.serverPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to a custom Vitte server binary. Empty = use the bundled server."
        },
        "vitte.server.offline": {
          "type": "boolean",
          "default": false,
          "description": "Do not start the language server (offline mode)."
        },
        "vitte.server.offlinePermanent": {
          "type": "boolean",
          "default": false,
          "description": "Force offline mode permanently (no auto-retry)."
        },
        "vitte.server.offlineMuteBanner": {
          "type": "boolean",
          "default": false,
          "description": "Mute the offline banner notification."
        },
        "vitte.server.autoRetry": {
          "type": "boolean",
          "default": true,
          "description": "Automatically retry starting the server when offline."
        },
        "vitte.server.autoRetryBaseMs": {
          "type": "number",
          "default": 60000,
          "minimum": 10000,
          "maximum": 300000,
          "description": "Base delay (ms) before retrying server start when offline."
        },
        "vitte.server.autoRetryMaxMs": {
          "type": "number",
          "default": 300000,
          "minimum": 60000,
          "maximum": 900000,
          "description": "Max delay (ms) for retry backoff when offline."
        },
        "vitte.requestTimeoutMs": {
          "type": "number",
          "default": 800,
          "minimum": 100,
          "maximum": 5000,
          "description": "Timeout (ms) for LSP requests (completion, hover, etc.)."
        },
        "vitte.requestMaxConcurrent": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "maximum": 32,
          "description": "Max concurrent LSP requests before backpressure."
        },
        "vitte.requestTimeouts.completion": {
          "type": "number",
          "default": 400,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for completion."
        },
        "vitte.requestTimeouts.hover": {
          "type": "number",
          "default": 300,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for hover."
        },
        "vitte.requestTimeouts.definition": {
          "type": "number",
          "default": 600,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for definition."
        },
        "vitte.requestTimeouts.references": {
          "type": "number",
          "default": 800,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for references."
        },
        "vitte.requestTimeouts.rename": {
          "type": "number",
          "default": 800,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for rename."
        },
        "vitte.requestTimeouts.documentSymbols": {
          "type": "number",
          "default": 600,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for document symbols."
        },
        "vitte.requestTimeouts.workspaceSymbols": {
          "type": "number",
          "default": 800,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for workspace symbols."
        },
        "vitte.requestTimeouts.semanticTokens": {
          "type": "number",
          "default": 800,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for semantic tokens."
        },
        "vitte.requestTimeouts.formatting": {
          "type": "number",
          "default": 800,
          "minimum": 50,
          "maximum": 5000,
          "description": "Timeout (ms) for formatting."
        },
        "vitte.indexerMaxRssMB": {
          "type": "number",
          "default": 1024,
          "minimum": 256,
          "maximum": 8192,
          "description": "Max RSS memory (MB) before skipping index updates."
        },
        "vitte.indexerCacheEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Persist index cache to speed up restarts."
        },
        "vitte.traceSampleRate": {
          "type": "number",
          "default": 0.01,
          "minimum": 0,
          "maximum": 1,
          "description": "Sampling rate for verbose trace metrics."
        },
        "vitte.features.completion": {
          "type": "boolean",
          "default": true,
          "description": "Enable completion provider."
        },
        "vitte.features.hover": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover provider."
        },
        "vitte.features.definition": {
          "type": "boolean",
          "default": true,
          "description": "Enable definition provider."
        },
        "vitte.features.references": {
          "type": "boolean",
          "default": true,
          "description": "Enable references provider."
        },
        "vitte.features.rename": {
          "type": "boolean",
          "default": true,
          "description": "Enable rename provider."
        },
        "vitte.features.documentSymbols": {
          "type": "boolean",
          "default": true,
          "description": "Enable document symbols."
        },
        "vitte.features.workspaceSymbols": {
          "type": "boolean",
          "default": true,
          "description": "Enable workspace symbols."
        },
        "vitte.features.semanticTokens": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic tokens."
        },
        "vitte.features.formatting": {
          "type": "boolean",
          "default": true,
          "description": "Enable document formatting."
        },
        "vitte.features.lint": {
          "type": "boolean",
          "default": true,
          "description": "Enable lint diagnostics."
        },
        "vitte.debug.program": {
          "type": "string",
          "default": "",
          "description": "Path to the vitte-runtime binary (leave blank for auto-detection)."
        },
        "vitte.toolchain.root": {
          "type": "string",
          "default": "",
          "description": "Root directory of the Vitte toolchain (prefix for binaries)."
        },
        "vitte.toolchainPath": {
          "type": "string",
          "default": "",
          "description": "(Legacy) Deprecated fallback for the toolchain root."
        },
        "vitte.runtime.path": {
          "type": "string",
          "default": "",
          "description": "Path to the runtime binary (alternative to debug.program)."
        },
        "vitte.lsp.path": {
          "type": "string",
          "default": "",
          "description": "Path to the vitte-lsp binary."
        },
        "vitte.build.path": {
          "type": "string",
          "default": "",
          "description": "Path to the vitte-build binary."
        },
        "vitte.fmt.path": {
          "type": "string",
          "default": "",
          "description": "Path to the vitte-fmt binary."
        },
        "vitte.bench.path": {
          "type": "string",
          "default": "",
          "description": "Path to the vitte-bench binary."
        },
        "vitte.build.profile": {
          "type": "string",
          "enum": [
            "dev",
            "test",
            "release",
            "bench"
          ],
          "default": "dev",
