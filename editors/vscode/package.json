    "menus": {
      "view/item/context": [
        {
          "command": "vitte.diagnostics.open",
          "when": "view == vitteDiagnostics && viewItem == vitteDiagnostic && vitte.serverOnline",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "vitte.diagnostics.refresh",
          "when": "view == vitteDiagnostics && vitte.serverOnline",
          "group": "navigation@1"
        },
        {
          "command": "vitte.modules.refresh",
          "when": "view == vitteModules && vitte.serverOnline",
          "group": "navigation@1"
        },
        {
          "command": "vitte.metrics.refresh",
          "when": "view == vitteMetrics && vitte.serverOnline",
          "group": "navigation@1"
        },
        {
          "command": "vitte.docs.refreshChapters",
          "when": "view == vitteSuggestions",
          "group": "navigation@1"
        },
        {
          "command": "vitte.offline.refresh",
          "when": "view == vitteOffline",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "vitte.openDocs",
          "when": "workspaceFolderCount > 0"
        },
        {
