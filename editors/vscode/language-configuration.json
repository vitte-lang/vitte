{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "wordPattern": "(-?\\d*\\.?\\d+)|(\\w+)",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(proc|entry|match|select|when|if|else|otherwise|loop|for)\\b.*\\{\\s*$",
      "action": { "indentAction": "Indent" }
    }
  ]
}
