# C:\Users\vince\Documents\GitHub\vitte\.editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
indent_style = space
indent_size = 2

# Windows scripts / batch
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles require tabs
[Makefile]
indent_style = tab

# Markdown: keep trailing spaces (hard line breaks), but still enforce final newline
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML often prefers 2 spaces, keep line length flexible
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = off

# JSON/JSONC
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# TOML (Cargo.toml / Muffin .muf assumed toml-like)
[*.{toml,muf,lock}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# C / C++
[*.{c,h,cc,cpp,cxx,hpp,hxx}]
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_style = space
indent_size = 2

# Vitte sources
[*.{vitte,vit}]
indent_style = space
indent_size = 2
max_line_length = 100

# XML / HTML / CSS
[*.{xml,html,css,scss}]
indent_style = space
indent_size = 2
max_line_length = 120

# JS/TS
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120
