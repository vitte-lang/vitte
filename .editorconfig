root = true

# ============================================================================
# EditorConfig for vitte-core
#
# Objectifs :
#   - Fournir des règles d'édition cohérentes pour tout le workspace Vitte.
#   - Gérer spécifiquement les fichiers Vitte (.vitte), Muffin (.muf), lexers,
#     scripts shell et fichiers de configuration usuels.
#   - Rester indépendant de tout autre langage que Vitte.
# ============================================================================

# ---------------------------------------------------------------------------
# Valeurs par défaut pour tous les fichiers
# ---------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ---------------------------------------------------------------------------
# Fichiers Vitte – code source (.vitte)
# ---------------------------------------------------------------------------
[*.vitte]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100

# ---------------------------------------------------------------------------
# Manifests Muffin – .muf / .muffin
# ---------------------------------------------------------------------------
[*.muf]
indent_style = space
indent_size = 2
tab_width = 2

[*.muffin]
indent_style = space
indent_size = 2
tab_width = 2

# Manifests Muffin racine (muffin.muf)
[muffin.muf]
indent_style = space
indent_size = 2
tab_width = 2

# ---------------------------------------------------------------------------
# Fichiers lex/grammaire Vitte (.lex, .l)
# ---------------------------------------------------------------------------
[*.lex]
indent_style = space
indent_size = 4
tab_width = 4

[*.l]
indent_style = space
indent_size = 4
tab_width = 4

# ---------------------------------------------------------------------------
# Scripts shell (scripts/*.sh)
# ---------------------------------------------------------------------------
[*.sh]
indent_style = space
indent_size = 4
tab_width = 4

# ---------------------------------------------------------------------------
# Fichiers JSON / YAML / TOML – configs outillage
# ---------------------------------------------------------------------------
[*.json]
indent_style = space
indent_size = 2
tab_width = 2

[*.yml]
indent_style = space
indent_size = 2
tab_width = 2

[*.yaml]
indent_style = space
indent_size = 2
tab_width = 2

[*.toml]
indent_style = space
indent_size = 2
tab_width = 2

# ---------------------------------------------------------------------------
# Markdown / docs – ne pas forcer la suppression d'espaces en fin de ligne
# (pour laisser les sauts de ligne "hard wrap" en Markdown)
# ---------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
tab_width = 2

# ---------------------------------------------------------------------------
# VS Code / editor configs locaux
# ---------------------------------------------------------------------------
[.vscode/*.json]
indent_style = space
indent_size = 2
tab_width = 2

[*.editorconfig]
indent_style = space
indent_size = 2
tab_width = 2
