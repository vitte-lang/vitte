# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 2
max_line_length = 100

[CMakeLists.txt]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
max_line_length = 80
