# ============================================================
# .editorconfig â€” Vitte Project
# Scope: compiler / runtime / std / tools
# Philosophy: deterministic, low-noise, editor-agnostic
# ============================================================

root = true


# ------------------------------------------------------------
# Global defaults
# ------------------------------------------------------------

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100


# ------------------------------------------------------------
# C / C++
# ------------------------------------------------------------

[*.{c,h,cpp,hpp,cc,cxx,hxx}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100


# ------------------------------------------------------------
# Vitte language
# ------------------------------------------------------------

[*.vit]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100
trim_trailing_whitespace = true

# Vitte specifics:
# - no tabs
# - blocks are explicit
# - comments must stay stable
# (do NOT auto-wrap comments)


# ------------------------------------------------------------
# Vitte manifests (Muffin / Steel)
# ------------------------------------------------------------

[*.{muf,mff,mcf}]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120
trim_trailing_whitespace = true


# ------------------------------------------------------------
# Build / config files
# ------------------------------------------------------------

[*.{yml,yaml,json,toml}]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

[*.{cmake,cmake.in}]
indent_style = space
indent_size = 2
tab_width = 2


# ------------------------------------------------------------
# Scripts
# ------------------------------------------------------------

[*.{sh,bash}]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

[*.{ps1}]
indent_style = space
indent_size = 4
tab_width = 4


# ------------------------------------------------------------
# Python
# ------------------------------------------------------------

[*.py]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 100


# ------------------------------------------------------------
# Markdown / Docs
# ------------------------------------------------------------

[*.md]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = off
trim_trailing_whitespace = false


# ------------------------------------------------------------
# Generated / vendor code
# ------------------------------------------------------------

[**/vendor/**]
trim_trailing_whitespace = false

[**/generated/**]
trim_trailing_whitespace = false


# ------------------------------------------------------------
# Binary / assets
# ------------------------------------------------------------

[*.{png,jpg,jpeg,gif,svg,ico,zip,tar,gz,7z}]
indent_style = unset
trim_trailing_whitespace = unset
insert_final_newline = unset