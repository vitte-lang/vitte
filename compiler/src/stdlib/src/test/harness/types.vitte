mod test.harness.types

use core.error.error.*

type TestCase
  name: str
  fn_name: str
.end

type TestResult
  ok: bool
  name: str
  msg: str
.end

type TestSuite
  name: str
  tests: [TestCase]
.end

fn result_ok(name: str) -> TestResult
  let r: TestResult
  set r.ok = true
  set r.name = name
  set r.msg = ""
  ret r
.end

fn result_fail(name: str, msg: str) -> TestResult
  let r: TestResult
  set r.ok = false
  set r.name = name
  set r.msg = msg
  ret r
.end
