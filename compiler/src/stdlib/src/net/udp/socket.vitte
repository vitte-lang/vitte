mod net.udp.socket

use core.error.error.*
use net.error.error.*
use net.addr.socket_addr.*

type UdpSocket
  handle: i64
.end

fn bind(addr: &SocketAddr) -> (bool, UdpSocket, Error)
  let s: UdpSocket
  set s.handle = -1
  ret (false, s, net_err("udp bind not wired"))
.end

fn close(s: &mut UdpSocket) -> void
  set s.handle = -1
.end
