mod cli.ansi.color

use cli.ansi.ansi.*

fn fg8(n: i64, s: str) -> str
  ret csi("38;5;" + n.to_str() + "m") + s + reset()
.end

fn red(s: str) -> str
  ret fg8(196, s)
.end

fn green(s: str) -> str
  ret fg8(46, s)
.end

fn yellow(s: str) -> str
  ret fg8(226, s)
.end

fn blue(s: str) -> str
  ret fg8(33, s)
.end

fn cyan(s: str) -> str
  ret fg8(51, s)
.end
