mod cli.tests.t_args_help

use cli.args.args.*
use cli.args.help.*
use cli.compat.assert.*

fn main() -> void
  let p: ArgParser = parser_new()
  do parser_flag(&mut p, "--help", "-h", false, "Show help")
  let s: str = render_help("app", "desc", p.flags)
  do assert(s.len > 0, "help rendered")
.end
