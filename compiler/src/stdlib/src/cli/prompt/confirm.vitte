mod cli.prompt.confirm

use cli.term.output.*
use cli.term.input.*
use cli.ansi.color.*

fn confirm(question: str, default_yes: bool) -> bool
  let suffix: str = if default_yes then " [Y/n] " else " [y/N] "
  do print(question + suffix)
  let s: str = read_line()
  if s.len == 0
    ret default_yes
  .end
  if s[0] == 'y' || s[0] == 'Y'
    ret true
  .end
  ret false
.end
