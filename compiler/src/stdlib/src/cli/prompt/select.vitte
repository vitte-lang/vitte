mod cli.prompt.select

use cli.term.output.*
use cli.term.input.*

fn select(label: str, options: [str]) -> i64
  do print(label + "\n")
  let i: i64 = 0
  loop
    if i >= options.len
      break
    .end
    do print("  " + (i+1).to_str() + ") " + options[i] + "\n")
    set i = i + 1
  .end
  do print("> ")
  let s: str = read_line()
  # placeholder parse
  ret 0
.end
