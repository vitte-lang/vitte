# Vitte Compiler - Default Configuration
# Copy this file to .vitteconfig in your project root and customize

# ============================================================================
# Output Settings
# ============================================================================

# Output format: text, json, or xml
output.format=text

# Enable colored output
output.color=true

# ============================================================================
# Compilation Settings
# ============================================================================

# Optimization level: 0 (none), 1 (basic), 2 (moderate), 3 (aggressive)
compile.optimization=2

# Emit intermediate representation
compile.emit_ir=false

# Emit assembly code
compile.emit_asm=false

# Emit C code
compile.emit_c=false

# Include debug symbols
compile.debug=false

# Treat warnings as errors
compile.warnings_as_errors=false

# ============================================================================
# Build Settings
# ============================================================================

# Enable parallel builds
build.parallel=true

# Number of threads (0 = number of CPU cores)
build.threads=0

# Use ccache/sccache for caching
build.use_cache=true

# Clean before building
build.clean=false

# ============================================================================
# Testing Settings
# ============================================================================

# Run unit tests
test.unit=true

# Run integration tests
test.integration=true

# Generate coverage report
test.coverage=false

# Test timeout in seconds
test.timeout=30

# ============================================================================
# Logging and Verbosity
# ============================================================================

# Verbosity level: 0 (errors only), 1 (warnings), 2 (info), 3 (debug)
verbosity.level=1

# Log file location (empty = stdout only)
logging.file=

# Timestamp in logs
logging.timestamp=false

# ============================================================================
# Cache Settings
# ============================================================================

# Cache directory
cache.directory=.vitte/cache

# Maximum cache size in MB
cache.max_size=500

# Cache clean interval in days
cache.clean_interval=7

# ============================================================================
# Project Settings
# ============================================================================

# Project root directory
project.root=.

# Include paths (comma-separated)
include.paths=./include,./src

# Library paths (comma-separated)
library.paths=./lib

# Output directory
output.directory=./build

# ============================================================================
# Code Style
# ============================================================================

# Code formatting style: vitte, google, llvm
code.style=vitte

# Line length
code.line_length=100

# Tab width
code.tab_width=4

# Use spaces instead of tabs
code.use_spaces=true

# ============================================================================
# Analysis Settings
# ============================================================================

# Show code metrics
analyze.metrics=true

# Show dependency analysis
analyze.dependencies=false

# Show symbol table
analyze.symbols=false

# ============================================================================
# Documentation
# ============================================================================

# Documentation output format: html, pdf, markdown
doc.format=html

# Documentation theme
doc.theme=default

# Include private symbols in documentation
doc.include_private=false

# ============================================================================
# Advanced Settings
# ============================================================================

# Enable experimental features
experimental.features=false

# Target platform
target.platform=native

# Target architecture: x86-64, arm64, wasm
target.architecture=x86-64

# Enable profiling
profiling.enabled=false

# Strict mode (maximum warnings)
strict_mode=false
