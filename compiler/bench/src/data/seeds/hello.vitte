# -----------------------------------------------------------------------------
# hello.vitte
# -----------------------------------------------------------------------------
# Minimal seed program for end-to-end toolchain smoke:
# - lexer/parser: function + string literal
# - lowerer/sema: let/ret
# - codegen/runtime: trivial execution
#
# Conventions:
# - blocks end with `.end`
# - avoid IO dependencies; we keep "hello" as data only
# -----------------------------------------------------------------------------

fn hello()
  let msg = "hello"
  ret msg
.end

fn main()
  let s = hello()

  # In early stages without IO, just return success.
  if s == "hello"
    ret 0
  else
    ret 1
  .end
.end
