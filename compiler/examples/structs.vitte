// structs.vitte - Struct definition and usage

struct Point {
    x: i32
    y: i32
}

struct Rectangle {
    top_left: Point
    bottom_right: Point
}

fn main() {
    let p1 = Point { x: 0, y: 0 }
    let p2 = Point { x: 10, y: 10 }
    
    let rect = Rectangle {
        top_left: p1,
        bottom_right: p2
    }
    
    say p1.x
    say rect.top_left.y
}
