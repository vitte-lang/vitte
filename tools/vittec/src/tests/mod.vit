# ============================================================
# vittec — tests/mod.vit
# Test Suite Aggregator — ULTRA MAX
# ============================================================

space vittec/tests

# ----------------------------
# Submodules
# ----------------------------

pull vittec/tests/cli
pull vittec/tests/compile

# ----------------------------
# Public API
# ----------------------------

share all

# ----------------------------
# Test runner
# ----------------------------

proc run_all() -> int
    say "=== vittec test suite ==="

    let rc1 = cli.main()
    if rc1 != 0
        say "CLI tests failed"
        return rc1
    .end

    let rc2 = compile.main()
    if rc2 != 0
        say "Compile tests failed"
        return rc2
    .end

    say "All vittec tests passed"
    return 0
.end

# ----------------------------
# Entry
# ----------------------------

proc main() -> int
    return run_all()
.end

# ----------------------------
# End of module
