

{

  "files.associations": {
    "*.vitte": "vitte",
    "*.muf": "vitte-muffin",
    "*.muffin": "vitte-muffin",
    "*.mod.muf": "vitte-muffin",
    "mod.muf": "vitte-muffin",
    "vitte.project.muf": "vitte-muffin",
    "*.lex": "vitte-lex",
    "*.l": "vitte-lex",

    
    "muffin.muf": "vitte-muffin",
    "muffin.template": "vitte-muffin"
  },

  
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/target": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.vscode": false
  },

  
  "files.watcherExclude": {
    "**/target/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true
  },

 
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": false,
  "editor.rulers": [100],
  "editor.wordWrap": "off",
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {},


  "[vitte]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.rulers": [100],
    "editor.autoIndent": "full",
    "editor.formatOnSave": false
  },

  
  "[vitte-muffin]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.rulers": [100],
    "editor.autoIndent": "full"
  },

  
  "[vitte-lex]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordWrap": "off",
    "editor.rulers": [100],
    "editor.autoIndent": "full"
  },

  
  "search.exclude": {
    "**/target": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.git": true
  },

  
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  
  "terminal.integrated.env.osx": {
    "VITTE_WORKSPACE_ROOT": "${workspaceFolder}",
    "VITTE_BOOTSTRAP_ROOT": "${workspaceFolder}/bootstrap"
  },

  "terminal.integrated.defaultProfile.osx": "zsh",

  
  "problems.showCurrentInStatus": true,
  "problems.showUnnecessary": true,
  "editor.inlayHints.enabled": "off",
  "breadcrumbs.enabled": true,

  
  "editor.inlineSuggest.enabled": true
}
